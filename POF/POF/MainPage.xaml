<Page x:Class="POF.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:POF"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      x:Name="mainPage"
      DataContext="{Binding MainPageViewModel,
                            Source={StaticResource Locator}}"
      mc:Ignorable="d">


    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <!--<local:PopToastControl x:Name="popToastControl" />-->

        <Button Grid.Row="1"
                HorizontalAlignment="Center"
                Click="Button_Click"
                Content="Go to AlarmPage" />

        <ToggleSwitch x:Name="OnOffAlarmSwitch"
                      Grid.Row="2"
                      HorizontalAlignment="Center"
                      IsOn="{Binding AlarmIsOn,
                                     Mode=TwoWay}" />
    </Grid>
</Page>
